int Yellowled = 11;
int Blueled = 6;
int Greenled = 9;
int Redled = 10;
int joy_x = A3;
int joy_y = A2;
int joystick_x = 0;
int joystick_y = 0;

void setup() {
  pinMode(Yellowled , OUTPUT);
  pinMode(Blueled, OUTPUT);
  pinMode(Greenled, OUTPUT);
  pinMode(Redled, OUTPUT);
  pinMode(joy_x, INPUT);
  pinMode(joy_y, INPUT);

}

void loop() {
  joystick_x = 0;
  joystick_y = 0;
  
 joystick_x = analogRead(joy_x);
 joystick_x = map (joystick_x, 0, 1023, -90, 90);
  
  joystick_y = analogRead(joy_y);
  joystick_y = map (joystick_y, 0, 1023, -90, 90);

  if(joystick_x < -5){
    digitalWrite(Yellowled , HIGH);
    digitalWrite(Blueled, LOW);
    digitalWrite(Greenled, LOW);  
    digitalWrite(Redled, LOW);
  }
  else if(joystick_x > 5){
    digitalWrite(Yellowled , LOW);
    digitalWrite(Blueled, HIGH);
    digitalWrite(Greenled, LOW);
    digitalWrite(Redled, LOW);
  }
  else if(joystick_y< -5){
    digitalWrite(Yellowled , LOW);
    digitalWrite(Blueled, LOW);
    digitalWrite(Greenled, HIGH);
    digitalWrite(Redled, LOW);
  }
  else if(joystick_y > 5){
    digitalWrite(Yellowled , LOW);
    digitalWrite(Blueled, LOW);
    digitalWrite(Greenled, LOW);
    digitalWrite(Redled, HIGH);
  }
  else{
    digitalWrite(Yellowled , LOW);
    digitalWrite(Blueled, LOW);
    digitalWrite(Greenled, LOW);
    digitalWrite(Redled, LOW);
  }
}
